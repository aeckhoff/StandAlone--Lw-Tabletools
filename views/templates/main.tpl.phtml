        <div id="lwLeftnavi">
            <div class="lwBoxLeftnavi"><?php if($this->obj) { echo "SELECTED: ".ucfirst($this->obj); } ?><?php if($this->module) { echo " >>> ".ucfirst($this->module); } ?></div>
