    <head>
        <title>Logic-Works Tabletools 1.0</title>
        <meta http-equiv="content-type" content="text/html; charset=iso-8859-1" />
        
        <link href="<?php echo $this->url_css ?>" rel="stylesheet" type="text/css"/>                
        <link href="<?php echo $this->url_module_css ?>" rel="stylesheet" type="text/css"/>                

    </head>
    <body>


        <div id="lwSubnavi">
            <div class="lwBoxSubNavi" id="lwBoxSubNaviSpacer">&nbsp;</div>
